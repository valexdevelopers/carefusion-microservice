generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/@prisma/notifications"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* NOTIFICATIONS */
model Notification {
  id          String @id @default(uuid())
  userId      String
  message     String
  type        NotificationType
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?
  deletedBy   String?

}


model Review {
  id            String   @id @default(uuid())
  userId        String                                   // The customer who wrote the review
  bookingId     String
  serviceId     String                                   // The product being reviewed
  serviceType   ServiceType
  rating        Int                                      // Rating (e.g., 1â€“5)
  comment       String?
  isApproved    Boolean   @default(false)                // Admin/Provider must approve
  approvedBy    String?                                  // Admin or service provider
  deletedAt     DateTime?
  deletedBy     String?                                  // Admin or service provider
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

}


enum ServiceType {
  CATERING
  EVENTCENTER
  
}

enum NotificationType {
  INFO
  WARNING
  ERROR
  SUCCESS
}


